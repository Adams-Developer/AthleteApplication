@model AthleteViewModel

<div class="background-image">
    <div class="container">
        <div class="card w-75">
            <div class="card-header bg-danger text-white">
                <h5 class="text-uppercase text-center">X Sports Athlete Application</h5>
            </div>
            <div class="card-body">
                <h5 class="card-title">* required</h5>
                <form asp-action="CreateRecord" asp-controller="Home">
                    <div class="form-row justify-content-center">
                        <div class="form-group col-md-6">
                            <label asp-for="EmailAddress"></label>
                            <input asp-for="EmailAddress" type="email" class="form-control" id="inputEmail4" placeholder="Your Email Address">
                        </div>
                    </div>
                    <div class="form-row justify-content-center">
                        <div class="form-group col-md-6">
                            <label asp-for="FirstName"></label>
                            <input asp-for="FirstName" type="email" class="form-control" id="inputEmail4" placeholder="Your First Name">
                        </div>
                    </div>
                    <div class="form-row justify-content-center">
                        <div class="form-group col-md-6">
                            <label asp-for="LastName"></label>
                            <input asp-for="LastName" type="password" class="form-control" id="inputPassword4" placeholder="Your Last Name">
                        </div>
                    </div>
                    <div class="form-row justify-content-center">
                        <div class="form-group col-md-6">
                            <label asp-for="StreetAddress"></label>
                            <input asp-for="StreetAddress" type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
                        </div>
                    </div>
                    <div class="form-row justify-content-center">
                        <div class="form-group col-md-4">
                            <label asp-for="ApartmentNumber"></label>
                            <input asp-for="ApartmentNumber" type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="ZipCode"></label>
                            <input asp-for="ZipCode" type="text" class="form-control" id="inputZip"/>
                        </div>
                    </div>
                    <div class="form-row justify-content-center ui-widget">
                        <div class="form-group col-md-4">
                            <label asp-for="City"></label>
                            <input asp-for="City" ID="txtCustomer" type="text" class="form-control" placeholder="Type City" />
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="State"></label>
                            <input asp-for="State" id="StateAbbr" type="text" class="form-control" placeholder="ex. IL">
                        </div>
                    </div>
                    <div class="form-row justify-content-center">
                        <div class="form-group col-md-6">
                            <label asp-for="SchoolName"></label>
                            <input asp-for="SchoolName" type="password" class="form-control" id="inputPassword4" placeholder="Your School Name">
                        </div>
                    </div>
                    <div class="form-row justify-content-center">
                        <div class="form-group col-md-6">
                            <label asp-for="Sport"></label>
                            <input asp-for="Sport" type="password" class="form-control" id="inputPassword4" placeholder="Sport You Play">
                        </div>
                    </div>
                    <div class="form-row justify-content-center">
                        <div class="form-group col-md-6">
                            <label asp-for="InstagramHandle"></label>
                            <input asp-for="InstagramHandle" type="password" class="form-control" id="inputPassword4" placeholder="Your Instagram Name">
                        </div>
                    </div>
                    <div class="form-row justify-content-center">
                        <div class="form-group col-md-6">
                            <label asp-for="TwitterHandle"></label>
                            <input asp-for="TwitterHandle" type="password" class="form-control" id="inputPassword4" placeholder="Your Twitter Name">
                        </div>
                    </div>
                    <div class="form-row justify-content-center">
                        <div class="form-group col-md-6">
                            <label asp-for="MerchSize" class="control-label"></label>
                            @if (ViewBag.Sizes != null)
                            {
                                @Html.DropDownListFor(model => model.Sizes.SizeId, ViewBag.Sizes as SelectList, "-- Select Merch Size --", new { @class = "form-control" })
                            }
                        </div>                        
                    </div>
                    <input type="submit" value="Submit" class="btn btn-sm btn-primary text-uppercase rounded-0" />
                </form>
            </div>
        </div>
    </div>

</div>

<script>

</script>

@section scripts{ 
    <script src="~/js/athleteRecord.js" asp-append-version="true"></script>
}
